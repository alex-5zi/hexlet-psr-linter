#!/usr/bin/env php

<?php

require_once __DIR__ . '/../vendor/autoload.php';

$cmd = new Commando\Command();

//$cmd->option('R')
//    ->aka('recursive')
//    ->description('Recursive')
//    ->boolean()
//    ->default(false);
    
$cmd->argument()->expectsFile()->description('or Directory, or File, or Wildcard');
$paths = hexletPsrLinter\createArrayFile($cmd->getArgumentValues());
$psrlint = new hexletPsrLinter\PsrLinter();
hexletPsrLinter\printLog($psrlint->setFiles($paths)
                                 ->getLog());
